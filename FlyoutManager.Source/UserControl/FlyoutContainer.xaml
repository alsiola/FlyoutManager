<metro:FlyoutsControl x:Class="Bulldog.FlyoutManager.FlyoutContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
    <metro:FlyoutsControl.ItemContainerStyle>
        <Style TargetType="{x:Type metro:Flyout}">
            <Setter Property="Header" Value="{Binding Header}" />
            <Setter Property="IsOpen" Value="{Binding IsOpen, Mode=TwoWay}" />
            <Setter Property="Position" Value="{Binding Position}" />
            <Setter Property="Theme" Value="{Binding Theme}" />
            <Setter Property="IsModal" Value="{Binding IsModal}" />
            <Setter Property="AreAnimationsEnabled" Value="{Binding AreAnimationsEnabled}" />
            <Setter Property="AnimateOpacity" Value="{Binding AnimateOpacity}" />
            <Setter Property="CloseCommand" Value="{Binding CloseCommand}" />
            <Setter Property="ExternalCloseButton" Value="{Binding ExternalCloseButton}" />
            <Setter Property="CloseButtonIsCancel" Value="{Binding CloseButtonIsCancel}" />
            <Setter Property="IsPinned" Value="{Binding IsPinned}" />

        </Style>
    </metro:FlyoutsControl.ItemContainerStyle>
</metro:FlyoutsControl>
